<div class="middle">
    <div class="login-panel">

        <div class="panel-heading">
            <h2 class="panel-title"><%= t("Change your password") %></h2>
        </div>

        <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= devise_error_messages! %>
                <%= f.hidden_field :reset_password_token %>

                <div class="input-group">
                    <span class="input-addon">
                        <i class="fa fa-lock fa-fw"></i>
                    </span>
                    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: t("New password")  %>
                </div>

                <div class="input-group">
                    <span class="input-addon">
                        <i class="fa fa-lock fa-fw"></i>
                    </span>
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: t("Confirm new password")  %>
                </div>

                <div class="actions">
                    <%= f.submit t("Send"), class: "btn btn-success"%>
                </div>
            <% end %>
        </div>
    </div>
 </div>
